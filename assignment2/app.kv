# TODO: Create your Kivy layout in the kv language here

BoxLayout:
    orientation:"horizontal"
    BoxLayout:
        orientation:"vertical"
        size_hint_x:0.2
        Label:
            text: "Sort by:"
            font_size:30
        Spinner:
            id: sort_selection
            text: app.sort_current
            values: app.sort_methods
            on_text: app.rank(self.text)
        Label:
            text: "Add a new movie."
        Label:
            text: "Title:"
            font_size:30
        TextInput:
            id: title
            multiline: False
            write_tab: False
        Label:
            text: "Year"
            font_size:30
        TextInput:
            id: year
            multiline: False
            write_tab: False
        Label:
            text: "Category:"
            font_size:30
        TextInput:
            id: category
            multiline: False
            write_tab: False
        Button:
            id: add_movies
            text: "Add Movie"
            on_press: app.add_button()
        Button:
            id: clear
            text: "Clear"
            on_press: app.clear_button()
    BoxLayout:
        orientation:"vertical"
        Label:
            id: top_message
            size_hint_y: 0.2
        BoxLayout:
            orientation:"vertical"
            id: movie_button
        Label:
            id: bottom_message
            size_hint_y: 0.2
